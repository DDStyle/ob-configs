				<action name = "Execute">
					<execute>kvantummanager</execute>
				</action>
			</item>

			<menu id = "conf" label = "Config Files">

				<menu id = "ob" label = "Obenbox">
				<item label = "autostart">
					<action name = "Execute">
						<command>gvim ~/.config/openbox/autostart</command>
					</action>
				</item>
				<item label = "rc.xml">
					<action name = "Execute">
						<command>gvim ~/.config/openbox/rc.xml</command>
					</action>
				</item>

				<item label = "menu.xml">
					<action name = "Execute">
						<command>gvim ~/.config/openbox/menu.xml</command>
					</action>
				</item>
					<item label = "themerc">
					<action name = "Execute">
				<command>gvim ~/.themes/tired-plum/openbox-3/themerc</command>
					</action>
				</item>
				</menu>
			
				<menu id = "pb" label = "Polybar">
				<item label = "config">
					<action name = "Execute">
						<command>gvim ~/.config/polybar/config</command>
					</action>
				</item>
				</menu>

				<menu id = "tnt2" label = "Tint2">
				<item label = "tint2rc">
					<action name = "Execute">
						<command>gvim ~/.config/tint2/tint2rc</command>
					</action>
				</item>
				</menu>

				<menu id = "pcm" label = "Picom">
					<item label = "picom.conf">
						<action name = "Execute">
							<command>gvim ~/.config/picom/picom.conf</command>
						</action>
					</item>
				</menu>

					<menu id = "vimr" label = "Vim">
				<item label = ".vimrc">
					<action name = "Execute">
						<command>gvim ~/.vimrc</command>
					</action>
				</item>
				</menu>

					<menu id = "xorg" label = "Xorg">
				<item label = ".xinitrc">
					<action name = "Execute">
						<command>gvim ~/.xinitrc</command>
					</action>
				</item>
						<item label = ".Xresources">
					<action name = "Execute">
						<command>gvim ~/.Xresources</command>
					</action>
				</item>

				</menu>

					<menu id = "zsh" label = "Zsh">
				<item label = ".zshrc">
					<action name = "Execute">
						<command>gvim ~/.zshrc</command>
					</action>
				</item>
						
				</menu>


			</menu>

			<separator />
			<item label = "Reconfigure">
				<action name = "Reconfigure"/>
				<action name="Execute">
        				<command>/home/danil-pc/Scripts/reboot_system.sh</command>
      				</action>
			</item>
			<item label = "Power Off">
				<action name="Execute">
					<execute>oblogout</execute>
      				</action>
			</item>
	</menu>

    </openbox_menu>
