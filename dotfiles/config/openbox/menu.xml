		<menu id = "fav" label = "Favorite links">
			<item label = "ArchWiki">
				<action name = "Execute">
					<execute>firefox https://wiki.archlinux.org/index.php/Main_page_(%D0%A0%D1%83%D1%81%D1%81%D0%BA%D0%B8%D0%B9) </execute>
				</action>
			</item>
			<item label = "Google Translate">
				<action name = "Execute">
					<execute>firefox https://translate.google.com/?hl=ru </execute>
				</action>
			</item>
			<item label = "Google Drive">
				<action name = "Execute">
					<execute>firefox https://drive.google.com/drive/my-drive</execute>
				</action>
			</item>
			<item label = "GMail">
				<action name = "Execute">
					<execute>firefox https://mail.google.com/mail/u/0/#inbox</execute>
				</action>
			</item>
			<item label = "Geometry Dash Wiki">
				<action name = "Execute">
					<execute>firefox https://geometry-dash.fandom.com/ru/wiki/%D0%9E%D0%B1%D0%BD%D0%BE%D0%B2%D0%BB%D0%B5%D0%BD%D0%B8%D0%B5_2.2</execute>
				</action>
			</item>
			</menu>
		<separator />
		<item label = "Desktop wallpapers">
				<action name = "Execute">
					<execute>nitrogen ~/Pictures/wallpapers</execute>
				</action>
			</item>
		<item label = "Tint2 settings">
				<action name = "Execute">
					<execute>tint2conf</execute>
				</action>
			</item>
		<item label = "Openbox settings">
				<action name = "Execute">
					<execute>obconf</execute>
				</action>
			</item>
		<item label = "GTK Appearance">
				<action name = "Execute">
					<execute>lxappearance</execute>
				</action>
			</item>

